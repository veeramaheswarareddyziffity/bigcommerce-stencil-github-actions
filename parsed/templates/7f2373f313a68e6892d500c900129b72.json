{
  "components/cart/coupons": "<div class=\"cart-coupons\">\n    <div class=\"cart-coupon-trigger\">\n        <a href=\"#\" class=\"cart-coupon-link\" data-coupon-trigger>\n            {{lang 'cart.coupons.apply_coupon_code'}}\n        </a>\n    </div>\n\n    <div class=\"cart-form coupon-code-form\" data-coupon-form style=\"display: none;\">\n        <form class=\"form form--hiddenLabels coupon-form\" action=\"{{urls.cart}}\" method=\"post\">\n            <input class=\"form-input\" data-error=\"{{lang 'cart.coupons.empty_error'}}\"  id=\"couponcode\" type=\"text\" name=\"couponcode\" value=\"\" placeholder=\"{{lang 'cart.coupons.coupon_code'}}\">\n            <input class=\"button button--primary button--small\" type=\"submit\" aria-label=\"{{lang 'cart.coupons.apply_coupon'}}\" value=\"{{lang 'cart.coupons.button'}}\">\n            <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n        </form>\n    </div>\n\n    {{#if cart.coupons.length}}\n        <div class=\"cart-coupon-display\">\n            <ul class=\"cart-coupon-list\">\n                {{#each cart.coupons}}\n                    <li class=\"cart-coupon-item\">\n                        <i class=\"icon\" aria-hidden=\"true\"><svg><use href=\"#icon-promotions\" /></svg></i>\n                        {{#if display_name}}\n                            <span class=\"cart-coupon-name\">{{display_name}} ({{code}})</span>\n                        {{else}}\n                            <span class=\"cart-coupon-name\">{{code}}</span>\n                        {{/if}}\n                        <a \n                            class=\"cart-coupon-remove\"\n                            aria-label=\"{{lang 'cart.coupons.remove'}}\"\n                            href=\"{{remove_url}}\"\n                        >\n                                <i class=\"icon\" aria-hidden=\"true\"><svg><use href=\"#icon-close\" /></svg></i>\n                        </a>\n                    </li>\n                {{/each}}\n            </ul>\n        </div>\n    {{/if}}\n</div>\n"
}
